// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Takhle bude vypadat záznam jedné události v databázi
model Event {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  
  // Data z formuláře
  date      String   // Např. "24/10/2023" - datum, ke kterému událost patří
  time      String   // Např. "14:30"
  type      String   // curani, kakani, jidlo, spanek...
  location  String   // venku / uvnitr
  place     String?  // Na trávě, V parku... (volitelné)
  note      String?  // Poznámka (volitelné)
}